{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": 1,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "func-style": [
      "error",
      "declaration"
    ],
    "no-func-assign": "error",
    "no-var": 2
  },
  "plugins": [
    "html"
  ],
  "settings": {
    "html/html-extensions": [
      ".html",
      ".riot"
    ]
  },
  "globals": {
    "opts": true,
    "riot": true
  }
}