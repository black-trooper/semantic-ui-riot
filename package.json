{
  "name": "semantic-ui-riot",
  "version": "1.4.0",
  "description": "Semantic UI for Riot",
  "main": "dist/semantic-ui-riot.min.js",
  "browser": "semantic-ui-riot.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "npm run watch",
    "watch": "npm-watch",
    "dev": "webpack --mode development",
    "prod": "webpack --mode production",
    "clean": "rimraf ./dist/tags",
    "test": "npm run clean && riot tags dist/tags && karma start",
    "build": "npm run test && npm run dev && npm run prod",
    "eslint": "eslint **/*.tag",
    "htmlhint": "htmlhint --config .htmllintrc --rulesdir ./node_modules/htmlhint-riot-rules/add_rules 'tags/**/*.tag'",
    "htmlhint:obseriot": "htmlhint --rules obseriot-must-remove --rulesdir ./scripts/rules/ 'tags/**/*.tag'"
  },
  "watch": {
    "eslint": {
      "patterns": [
        "tags"
      ],
      "extensions": "tag"
    },
    "htmlhint": {
      "patterns": [
        "tags"
      ],
      "extensions": "tag"
    },
    "htmlhint:obseriot": {
      "patterns": [
        "tags"
      ],
      "extensions": "tag"
    },
    "test": {
      "patterns": [
        "tags",
        "test"
      ],
      "extensions": [
        "tag",
        "spec.js"
      ]
    }
  },
  "keywords": [
    "riotjs",
    "riot",
    "semantic",
    "semanticui"
  ],
  "author": {
    "name": "black-trooper",
    "url": "https://github.com/black-trooper/semantic-ui-riot/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/black-trooper/semantic-ui-riot.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/black-trooper/semantic-ui-riot/issues"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "q": "^1.5.1",
    "riot": "^3.13.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "babel-loader": "^8.2.5",
    "chai": "^4.3.6",
    "eslint": "^8.16.0",
    "eslint-plugin-html": "^6.2.0",
    "htmlhint": "^1.1.4",
    "htmlhint-riot-rules": "^0.5.0",
    "is-fullwidth-code-point": "^4.0.0",
    "jquery": "^3.6.0",
    "karma": "^6.3.20",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-riot": "^2.0.0",
    "karma-sinon-chai": "^2.0.2",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.0.0",
    "npm-watch": "^0.11.0",
    "regjsparser": "^0.8.4",
    "riot-tag-loader": "^2.1.0",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-date-fns-externals": "^1.0.2"
  }
}